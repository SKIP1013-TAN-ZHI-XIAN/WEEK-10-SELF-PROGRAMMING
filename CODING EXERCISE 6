package selfProgramming;

import java.util.*;

class Exercise6 {
	
	// Write a Java program to find the index of an array element
	public static int  findIndex (int[] array, int y) {
        if (array == null) return -1;
        int length = array.length;
        int i = 0;
        while (i < length) {
            if (array[i] == y) return i;
            else i = i + 1;
        }
        return - 1;
    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] numberArray = {9, 19, 29, 39, 49, 59, 69, 79, 89, 99, 109};
	      
		System.out.println("Index position of 29 : " + findIndex(numberArray, 29));
	    System.out.println("Index position of 49 : " + findIndex(numberArray, 49));
	    System.out.println("Index position of 59 : " + findIndex(numberArray, 59));
	    System.out.println("Index position of 89 : " + findIndex(numberArray, 89));
	}

}
