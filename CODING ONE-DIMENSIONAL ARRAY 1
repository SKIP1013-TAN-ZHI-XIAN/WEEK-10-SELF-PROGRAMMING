import java.util.*;

class OneDimensionalArray1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] num = new int[5];
	    // OR int num[] = new int[5];
		int sum;
	    sum = 0;
	    
	    Scanner input = new Scanner(System.in);
		
	    System.out.println("Enter five numbers one number per line");
	    for (int i = 0; i < num.length; i++) {
	    	num[i] = input.nextInt();
	    	sum = sum + num[i];
	    }
	    
	    for (int i = 0; i < num.length; i++) {
	    	System.out.println("Numbers are : " + "index " + i + " = " + num[i]);
	    }
	    System.out.println("The sum of the numbers = " + sum);
	    System.out.println("The average of the numbers = " + sum / num.length);   
	}

}
