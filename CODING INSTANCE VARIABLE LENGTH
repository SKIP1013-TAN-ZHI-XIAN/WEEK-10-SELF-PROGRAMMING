package selfProgramming;

import java.util.*;

class InstanceVariableLength {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] list = {10, 20, 30, 40, 50, 60};  // list.length is 6
		int sum;
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter list");
		sum = 0;
		for (int i = 0; i < list.length; i++) {
			System.out.println("Lists are : " + "list " + i + " = " + list[i]);
		    	sum = sum + list[i];
		}
		System.out.println("The list.length = 6");
		System.out.println("The sum of the list = " + sum);
		System.out.println("The average of the list = " + sum / list.length);   
	}

}
